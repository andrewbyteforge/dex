# DEV Environment - Testnets Only
DEV_MODE=true
ENVIRONMENT=development

# Core Settings
DEBUG=true
LOG_LEVEL=DEBUG
BASE_CURRENCY=GBP

# Network Settings - TESTNETS ONLY
MAINNET_ENABLED=false
AUTOTRADE_ENABLED=false

# Chain RPCs (Free Testnets)
ETH_RPC_URLS=https://sepolia.infura.io/v3/YOUR_KEY,https://eth-sepolia.public.blastapi.io
BSC_RPC_URLS=https://data-seed-prebsc-1-s1.binance.org:8545,https://data-seed-prebsc-2-s1.binance.org:8545
POLYGON_RPC_URLS=https://rpc-amoy.polygon.technology,https://polygon-amoy.drpc.org
SOL_RPC_URLS=https://api.devnet.solana.com,https://devnet.helius-rpc.com

# Database
DB_URL=sqlite+aiosqlite:///./data/dev.db

# Timeouts (Relaxed for Development)
HTTP_CONNECT_TIMEOUT=3.0
HTTP_READ_TIMEOUT=10.0
HTTP_RETRIES=3

# Development Features
ENABLE_DEBUG_ROUTES=true
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# External Services (Optional in Dev)
COINGECKO_API_KEY=
DEXSCREENER_API_KEY=
SENTRY_DSN=
LOG_EXPORT_ENABLED=false

# Wallet Connect
WALLETCONNECT_PROJECT_ID=your_project_id_here

# Preset Configuration
PRESET_DEFAULT=standard
PRESET_ALLOW_OVERRIDES=true
DAILY_LOSS_ACTION=disable_autotrade