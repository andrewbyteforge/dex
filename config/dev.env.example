# DEX Sniper Pro - Development Environment Configuration
# File: config/dev.env.example

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
SERVICE_MODE=free

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
API_HOST=127.0.0.1
API_PORT=8000
RELOAD=true

# Frontend Configuration
FRONTEND_HOST=127.0.0.1
FRONTEND_PORT=3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///./data/dex_sniper_dev.db
DATABASE_ECHO=true
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# BLOCKCHAIN RPC ENDPOINTS (TESTNETS)
# =============================================================================
# Ethereum Sepolia Testnet
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_CHAIN_ID=11155111

# BSC Testnet
BSC_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
BSC_CHAIN_ID=97

# Polygon Mumbai Testnet
POLYGON_RPC_URL=https://rpc-mumbai.maticvigil.com/
POLYGON_CHAIN_ID=80001

# Base Sepolia Testnet
BASE_RPC_URL=https://sepolia.base.org
BASE_CHAIN_ID=84532

# Arbitrum Sepolia Testnet
ARBITRUM_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
ARBITRUM_CHAIN_ID=421614

# Solana Devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_CLUSTER=devnet

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
DEFAULT_CHAIN=base
DEFAULT_SLIPPAGE=0.01
MAX_SLIPPAGE=0.05
DEFAULT_GAS_MULTIPLIER=1.2

# Risk Limits (GBP-based, lower for dev)
MAX_POSITION_SIZE_GBP=10.00
DAILY_LOSS_LIMIT_GBP=50.00

# Autotrade Settings (disabled in dev by default)
AUTOTRADE_ENABLED=false
AUTOTRADE_HOT_WALLET_CAP_GBP=100.00

# =============================================================================
# EXTERNAL API KEYS (OPTIONAL FOR DEV)
# =============================================================================
# Price Data
COINGECKO_API_KEY=your_coingecko_api_key_here
DEXSCREENER_API_KEY=your_dexscreener_api_key_here

# Blockchain Explorers
ETHERSCAN_API_KEY=your_etherscan_api_key_here
BSCSCAN_API_KEY=your_bscscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here
BASESCAN_API_KEY=your_basescan_api_key_here
ARBISCAN_API_KEY=your_arbiscan_api_key_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=dev_secret_key_not_for_production_use_only
JWT_SECRET=dev_jwt_secret_change_in_production
ENCRYPTION_KEY=dev_encryption_key_32_bytes_long!!

# CORS Settings (permissive for development)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_RETENTION_DAYS=30
CONSOLE_LOGGING=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# AI Features
AI_FEATURES_ENABLED=true
AUTO_TUNING_MODE=advisory

# Advanced Features (mostly disabled for dev simplicity)
ENABLE_MEMPOOL_MONITORING=false
ENABLE_COPY_TRADING=false
ENABLE_TELEGRAM_ALERTS=false
ENABLE_PRIVATE_ORDERFLOW=false

# =============================================================================
# ALERTING CONFIGURATION (OPTIONAL)
# =============================================================================
# Email Alerts (for testing only)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_test_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=your_test_email@gmail.com
EMAIL_TO=your_test_email@gmail.com

# Telegram Alerts (for testing only)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Webhook Alerts
WEBHOOK_URL=https://your-webhook-url.com/alerts
WEBHOOK_TIMEOUT=10

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Request Timeouts (relaxed for development)
RPC_TIMEOUT_SECONDS=30
API_TIMEOUT_SECONDS=60
HEALTH_CHECK_INTERVAL_SECONDS=30

# Rate Limiting (disabled for dev)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=1000

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test Database
TEST_DATABASE_URL=sqlite:///./data/test_dex_sniper.db

# Mock Settings
USE_MOCK_RPC=false
USE_MOCK_PRICES=false
MOCK_TRADING_ENABLED=true

# =============================================================================
# DEVELOPMENT UTILITIES
# =============================================================================
# Enable additional debugging
SQLALCHEMY_ECHO=true
UVICORN_RELOAD=true
REACT_DEVELOPMENT_MODE=true

# Profiling
ENABLE_PROFILING=false
PROFILING_OUTPUT_DIR=./data/profiling

# =============================================================================
# NOTES FOR DEVELOPERS
# =============================================================================
# 1. Copy this file to .env in the project root
# 2. Update API keys with your actual keys
# 3. For testnet trading, get testnet tokens from faucets
# 4. Most features work without API keys for basic development
# 5. Set USE_MOCK_RPC=true if you don't have RPC access