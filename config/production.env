# DEX Sniper Pro - Production Environment Configuration
# 
# CRITICAL SECURITY NOTICE:
# - This file contains sensitive production configuration
# - Never commit actual secrets to version control
# - Use secure secret management in production (HashiCorp Vault, AWS Secrets Manager, etc.)
# - All secrets below are PLACEHOLDERS and must be replaced with actual values
#
# Copy this file and replace ALL placeholder values with real production values

# =====================================
# PRODUCTION APPLICATION CONFIGURATION
# =====================================

# REQUIRED: Set to production
ENVIRONMENT=production

# Application settings
APP_NAME="DEX Sniper Pro"
APP_VERSION="1.0.0"
DEBUG=false

# Production server configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false
WORKERS=4  # Adjust based on CPU cores
MAX_REQUEST_SIZE=16777216  # 16MB
REQUEST_TIMEOUT=30

# =====================================
# CRITICAL SECURITY CONFIGURATION
# =====================================

# REQUIRED: JWT Secret (MUST be unique and secure)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
# WARNING: Replace this placeholder with actual secret!
JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET_MINIMUM_64_CHARACTERS_RANDOM_STRING_FOR_PRODUCTION

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ISSUER=dex-sniper-pro
JWT_AUDIENCE=dex-sniper-pro

# REQUIRED: Encryption Key (MUST be unique and secure)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
# WARNING: Replace this placeholder with actual encryption key!
ENCRYPTION_KEY=REPLACE_WITH_SECURE_ENCRYPTION_KEY_MINIMUM_64_CHARACTERS_RANDOM_STRING_FOR_PRODUCTION

# Production API Keys (comma separated)
# Generate secure keys for production use
# WARNING: Replace with actual production API keys!
VALID_API_KEYS=REPLACE_WITH_PRODUCTION_API_KEYS_COMMA_SEPARATED

# CRITICAL: Production CORS Configuration
# ONLY include your actual production domains
# WARNING: Replace with your actual production URLs!
CORS_ORIGINS=https://your-production-domain.com,https://www.your-production-domain.com
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=600

# =====================================
# PRODUCTION DATABASE CONFIGURATION
# =====================================

# PostgreSQL Production Database (REQUIRED)
# WARNING: Replace all database values with actual production credentials!
DATABASE__POSTGRES_HOST=your-production-db-host.com
DATABASE__POSTGRES_PORT=5432
DATABASE__POSTGRES_DB=dex_sniper_pro_production
DATABASE__POSTGRES_USER=dex_sniper_prod_user
DATABASE__POSTGRES_PASSWORD=REPLACE_WITH_SECURE_DATABASE_PASSWORD_PRODUCTION
DATABASE__POSTGRES_SSL_MODE=require
DATABASE__POSTGRES_POOL_SIZE=20
DATABASE__POSTGRES_MAX_OVERFLOW=30
DATABASE__POSTGRES_POOL_TIMEOUT=60
DATABASE__POSTGRES_CONNECT_TIMEOUT=10

# =====================================
# PRODUCTION RATE LIMITING
# =====================================

# Redis for rate limiting (REQUIRED for production)
# WARNING: Replace with actual Redis connection string!
SECURITY__RATE_LIMIT_ENABLED=true
SECURITY__RATE_LIMIT_REDIS_URL=redis://your-production-redis-host:6379/0
SECURITY__RATE_LIMIT_FALLBACK_MEMORY=false

# Production rate limits (more restrictive)
SECURITY__RATE_LIMIT_STRICT_CALLS=5
SECURITY__RATE_LIMIT_STRICT_PERIOD=60
SECURITY__RATE_LIMIT_NORMAL_CALLS=30
SECURITY__RATE_LIMIT_NORMAL_PERIOD=60
SECURITY__RATE_LIMIT_RELAXED_CALLS=100
SECURITY__RATE_LIMIT_RELAXED_PERIOD=60
SECURITY__RATE_LIMIT_TRADING_CALLS=10
SECURITY__RATE_LIMIT_TRADING_PERIOD=60

# =====================================
# PRODUCTION WEBSOCKET CONFIGURATION
# =====================================

SECURITY__WEBSOCKET_MAX_CONNECTIONS=200
SECURITY__WEBSOCKET_MAX_MESSAGE_SIZE=32768  # 32KB (more restrictive)
SECURITY__WEBSOCKET_HEARTBEAT_INTERVAL=30
SECURITY__WEBSOCKET_CONNECTION_TIMEOUT=180  # 3 minutes (shorter timeout)
SECURITY__WEBSOCKET_RATE_LIMIT_MESSAGES=30
SECURITY__WEBSOCKET_RATE_LIMIT_PERIOD=60

# =====================================
# PRODUCTION BLOCKCHAIN CONFIGURATION
# =====================================

# Default chain for production
DEFAULT_CHAIN=base

# Supported chains
SUPPORTED_CHAINS=ethereum,bsc,polygon,base,arbitrum,solana

# CRITICAL: Use dedicated RPC endpoints for production
# WARNING: Replace with your own dedicated RPC endpoints!
# Free public RPCs are NOT suitable for production use
ETHEREUM_RPC=https://your-dedicated-ethereum-rpc-endpoint.com
BSC_RPC=https://your-dedicated-bsc-rpc-endpoint.com
POLYGON_RPC=https://your-dedicated-polygon-rpc-endpoint.com
BASE_RPC=https://your-dedicated-base-rpc-endpoint.com
ARBITRUM_RPC=https://your-dedicated-arbitrum-rpc-endpoint.com
SOLANA_RPC=https://your-dedicated-solana-rpc-endpoint.com

# Production RPC configuration
RPC_TIMEOUT=20
RPC_RETRY_ATTEMPTS=2
RPC_RETRY_DELAY=2.0
RPC_MAX_CONNECTIONS=50

# =====================================
# PRODUCTION TRADING CONFIGURATION
# =====================================

# Production trading parameters (more conservative)
DEFAULT_SLIPPAGE=0.005  # 0.5%
MAX_SLIPPAGE=0.03       # 3%
DEFAULT_GAS_MULTIPLIER=1.1
MAX_GAS_MULTIPLIER=2.0

# Production risk limits (adjust based on your requirements)
MAX_POSITION_SIZE_GBP=500
DAILY_LOSS_LIMIT_GBP=2000
MAX_DAILY_TRADES=50
COOLDOWN_BETWEEN_TRADES_SECONDS=5

# Production autotrade settings
AUTOTRADE_ENABLED=false  # Enable only when ready
AUTOTRADE_HOT_WALLET_CAP_GBP=5000
AUTOTRADE_MAX_CONCURRENT_TRADES=3
AUTOTRADE_EMERGENCY_STOP_ENABLED=true

# =====================================
# PRODUCTION EXTERNAL API KEYS
# =====================================

# WARNING: Replace all API keys with actual production keys!

# Dexscreener API (Pro plan recommended for production)
DEXSCREENER_API_KEY=your_production_dexscreener_api_key

# CoinGecko API (Pro plan recommended)
COINGECKO_API_KEY=your_production_coingecko_api_key

# Blockchain Explorer APIs (Pro plans recommended)
ETHERSCAN_API_KEY=your_production_etherscan_api_key
BSCSCAN_API_KEY=your_production_bscscan_api_key
POLYGONSCAN_API_KEY=your_production_polygonscan_api_key
ARBISCAN_API_KEY=your_production_arbiscan_api_key
BASESCAN_API_KEY=your_production_basescan_api_key

# Production API configuration
EXTERNAL_API_TIMEOUT=15
EXTERNAL_API_RETRY_ATTEMPTS=3
EXTERNAL_API_RATE_LIMIT_DELAY=0.2

# =====================================
# PRODUCTION LOGGING CONFIGURATION
# =====================================

# Production logging (more conservative retention)
LOG_LEVEL=WARNING
LOG_FORMAT=json
LOG_RETENTION_DAYS=180  # 6 months
LOG_MAX_FILE_SIZE=200MB
LOG_BACKUP_COUNT=20
LOG_COMPRESS_ROTATED=true

# =====================================
# PRODUCTION LEDGER CONFIGURATION
# =====================================

# Production ledger settings
LEDGER_RETENTION_DAYS=2555  # 7 years for compliance
LEDGER_FORMAT=csv
LEDGER_BACKUP_ENABLED=true
LEDGER_ENCRYPTION_ENABLED=true

# =====================================
# PRODUCTION FEATURE FLAGS
# =====================================

# Enable production features
ENABLE_MEMPOOL_MONITORING=false  # Enable when infrastructure ready
ENABLE_COPY_TRADING=false        # Enable when tested
ENABLE_TELEGRAM_ALERTS=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_BACKTESTING=false         # Not needed in production

# =====================================
# PRODUCTION TELEGRAM CONFIGURATION
# =====================================

# Production Telegram configuration
# WARNING: Replace with actual production bot token and chat ID!
TELEGRAM_BOT_TOKEN=your_production_telegram_bot_token
TELEGRAM_CHAT_ID=your_production_telegram_chat_id
TELEGRAM_RATE_LIMIT=10  # Conservative rate limiting

# =====================================
# PRODUCTION MONITORING
# =====================================

# Production monitoring (enabled)
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

